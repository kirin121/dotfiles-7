# Unix
alias l="ls -lAh"
alias ll="ls -al"
alias la="ls -A"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="mvim"
alias v="$VISUAL"

# Homebrew
alias br="brew"
alias brc="brew cask"

# Cloud
alias n="now"
alias h="heroku"

# Node
alias y="yarn"

# Ruby
alias b="bundle"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'
