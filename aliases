# Unix
alias l="ls -lAh"
alias ll="ls -al"
alias la="ls -A"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="mvim"
alias v="$VISUAL"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# GitHub issues/pull requests subscribed too
alias ghs='curl -s -H "Authorization: token $GITHUB_TOKEN" "https://api.github.com/issues?filter=subscribed&state=all" | jq ".[].html_url" | xargs open'
