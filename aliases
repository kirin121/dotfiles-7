# Unix
alias l="ls -lAh"
alias ll="ls -al"
alias la="ls -A"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="mvim"
alias v="$VISUAL"

# Homebrew
alias br="brew"
alias brc="brew cask"

# Ruby
alias r="ruby"

# Bundler
alias b="bundle"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias s="rspec"

# Node
alias n="node"

# Docker
alias d="docker"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'
