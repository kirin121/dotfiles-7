# Unix
alias l="ls -lAh"
alias ll="ls -al"
alias la="ls -A"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="mvim"
alias v="$VISUAL"

# pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# get issues and pull requests subscribed to on github
alias ghs='curl -s -H "Authorization: token $GITHUB_TOKEN" "https://api.github.com/issues?filter=subscribed&state=all" | jq ".[].html_url" | xargs open'

# watch twitch stream using mpv/youtube-dl
alias twitch='function _twitch() { mpv "https://twitch.tv/$1"; }; _twitch'
